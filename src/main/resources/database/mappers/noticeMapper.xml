<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
 <mapper namespace="com.iu.s1.notice.NoticeDAO">
 
 	<select id="list" resultType="NoticeDTO">
 		SELECT * FROM NOTICE
 	</select>
 	
 	<select id="detail" resultType="NoticeDTO">
 		SELECT * FROM NOTICE WHERE NUM = #{num}
 	</select>
 	
 	<insert id="add" parameterType="NoticeDTO">
 		INSERT INTO NOTICE (NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT)
		VALUES (NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, #{hit})
 	</insert>
 	
 	<delete id="delete" parameterType="NoticeDTO">
 		DELETE FROM NOTICE WHERE NUM = #{num}
 	</delete>
 
 </mapper>